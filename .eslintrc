{
  "extends": ["@trig-app", "plugin:import/typescript"],
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "overrides": [
    {
      "files": ["**/src/**", "**/stories/**"],
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
        ],
        "react/prop-types": 0,
        "no-undef": "off"
      },
      "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"],
            "moduleDirectory": ["node_modules", "src/"]
          }
        }
      }
    },
    {
      "files": ["**/__tests__/**", "**/src/test/**", "jest.setup.js"],
      "rules": {
        "rules": {
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
          ]
        },
        "react/prop-types": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "react/button-has-type": 0,
        "no-console": 0,
        "react/no-array-index-key": 0
      }
    }
  ]
}
